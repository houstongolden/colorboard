<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table class="boards-list">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= render board, disabled: true %></td>
        
        
        <td><%= link_to 'Show', edit_board_path(board) %></td>
        <!-- <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

